#:kivy 2.3.0
WidgetsExample:

<WidgetsExample>:
   cols: 3
   ToggleButton:
      size_hint: None, 0.5
      height: "100dp"
      on_state: root.toggle_counter(self) 
   Button:
      disabled: not root.c_state
      text: "COUNT"
      on_press: root.change_text()

      size_hint: None, 0.5
      height: "100dp"
      font_name: "fonts/Lcd.ttf"
      font_size: "50dp"
      color: 1, 0, 0, 1
      background_color: 0, 0.5, 0, 1
      
   Label:
      id: thingy
      size_hint: None, 0.5
      height: "100dp"
      text: root.my_text
      font_name: "fonts/Lcd.ttf"
   
   Switch:
      size_hint: None, 0.5
      height: "100dp"
      on_active: root.light_switch(self)



      



